<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp">

    <!-- ProgressBar Circular -->
    <ProgressBar
        android:id="@+id/circleProgressBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:indeterminate="false"
        android:max="10"
    android:progress="0"
    style="@android:style/Widget.ProgressBar.Horizontal"
    android:rotation="270"
    android:progressDrawable="@drawable/circular_progress_bar" />

    <TextView
        android:id="@+id/waterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="0/10"
        android:textSize="24sp"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/glassWaterView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/circleProgressBar"
        android:layout_centerHorizontal="true"
        android:src="@drawable/water_glass" />

    <Button
        android:id="@+id/addWaterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/glassWaterView"
        android:layout_marginTop="16dp"
        android:text="AÃ±adir Vaso"/>

    <Button
        android:id="@+id/removeWaterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/glassWaterView"
        android:layout_toEndOf="@id/addWaterButton"
        android:layout_marginStart="16dp"
        android:text="Quitar Vaso"/>

</RelativeLayout>
